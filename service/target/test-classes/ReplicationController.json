{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "name": "pxc-node1"
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "node": "pxc-node1",
          "unit": "pxc-cluster"
        }
      },
      "spec": {
        "restartPolicy": "Always",
        "imagePullSecrets": [
          {
            "name": "myregistry"
          }
        ],
        "containers": [
          {
            "resources": {
              "limits": {
                "cpu": "100m"
              }
            },
            "image": "117.78.33.214/autoshift/vmall-galera:0.1",
            "name": "pxc-node1",
            "ports": [
              {
                "containerPort": 3306
              },
              {
                "containerPort": 4444
              },
              {
                "containerPort": 4567
              },
              {
                "containerPort": 4568
              }
            ],
            "env": [
              {
                "name": "GALERA_CLUSTER",
                "value": "true"
              },
              {
                "name": "WSREP_CLUSTER_ADDRESS",
                "value": "gcomm://"
              },
              {
                "name": "WSREP_SST_USER",
                "value": "sst"
              },
              {
                "name": "WSREP_SST_PASSWORD",
                "value": "sst"
              },
              {
                "name": "MYSQL_USER",
                "value": "mysql"
              },
              {
                "name": "MYSQL_PASSWORD",
                "value": "mysql"
              },
              {
                "name": "MYSQL_ROOT_PASSWORD",
                "value": "root"
              }
            ]
          }
        ]
      }
    }
  }
}