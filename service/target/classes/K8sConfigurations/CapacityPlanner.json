[
  {
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "CAPPLANER_NAME"
    },
    "spec": {
      "containers": [
        {
          "volumeMounts": [
            {
             "mountPath":"/autoshift-capacityplanner/log",
             "name":"log"
            }
          ],
          "name": "capplanner",
          "image": "10.119.63.231:5002/autoshift/autoshift-capacityplanner:latest",
          "env": [
            {
              "name": "MAX_REPLICA_ADD",
              "value": "6"
            }
          ],
          "ports": [
            {
              "containerPort": 8086
            }
          ],
          "imagePullPolicy": "Always"
        }
      ],
      "nodeSelector": {
        "stack": "autoshift"
      },
      "restartPolicy": "OnFailure",
      "volumes": [
        {"name":"log",
         "hostPath": {"path":"/autoshift-capacityplanner-logs"}
        }
      ]
    }
  }
]